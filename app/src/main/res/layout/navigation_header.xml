<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryContainer"
        android:gravity="start"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/navigation_header_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:padding="4dp"
            android:paddingTop="16dp"
            android:src="@drawable/ic_launcher_foreground_2"
            app:shapeAppearance="@style/circleImage" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/navigation_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="?attr/colorOnPrimaryContainer"
            android:text="Đạt 09"
            android:textSize="24sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/navigation_header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundTint="?attr/colorOnPrimaryContainer"
            android:text="dat09"
            android:textSize="12sp" />
    </LinearLayout>
</layout>